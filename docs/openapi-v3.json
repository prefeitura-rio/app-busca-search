    "/api/v1/busca/{collection}": {
      "get": {
        "description": "Realiza uma busca híbrida combinando texto e embeddings no Typesense",
        "tags": [
          "busca"
        ],
        "summary": "Busca híbrida no Typesense",
        "parameters": [
          {
            "description": "Nome da coleção",
            "name": "collection",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
