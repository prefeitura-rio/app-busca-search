    "/busca/{colecao}": {
      "get": {
        "description": "Realiza uma busca híbrida (texto + vetor) na base do Typesense",
        "tags": [
          "busca"
        ],
        "summary": "Busca documentos",
        "parameters": [
          {
            "description": "Nome da coleção",
            "name": "colecao",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Termo de busca",
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Número da página atual",
            "name": "pagina",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "description": "Itens por página",
            "name": "por_pagina",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "description": "Vetor de embedding (no formato JSON: [0.1,0.2,...]))",
            "name": "embedding",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
